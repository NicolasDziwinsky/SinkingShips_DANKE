<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane fx:id="RootPane" stylesheets="@../../../style.css" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sinkingships.MainController">

   <ImageView styleClass="decorations" AnchorPane.bottomAnchor="200.0" AnchorPane.rightAnchor="100.0" fitHeight="150.0" fitWidth="150.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/deco/deco_cools.png" backgroundLoading="true"/>
   </ImageView>
   <ImageView styleClass="decorations" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="300.0" fitHeight="250.0" fitWidth="250.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/deco/deco_dino.png" backgroundLoading="true"/>
   </ImageView>
   <ImageView styleClass="decorations" AnchorPane.topAnchor="200.0" AnchorPane.rightAnchor="700.0" fitHeight="350.0" fitWidth="350.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/deco/deco_pirateship.png" backgroundLoading="true"/>
   </ImageView>
   <ImageView styleClass="decorations" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="400.0" fitHeight="300.0" fitWidth="300.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/deco/deco_battleship.png" backgroundLoading="true"/>
   </ImageView>
   <ImageView styleClass="decorations" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="50.0" fitHeight="150.0" fitWidth="150.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/deco/deco_jet1.png" backgroundLoading="true"/>
   </ImageView>
   <ImageView styleClass="decorations" AnchorPane.bottomAnchor="250.0" AnchorPane.leftAnchor="150.0" fitHeight="150.0" fitWidth="150.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/deco/deco_jet2.png" backgroundLoading="true"/>
   </ImageView>
   <ImageView styleClass="decorations" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="400.0" fitHeight="200.0" fitWidth="200.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/deco/deco_heli.png" backgroundLoading="true"/>
   </ImageView>

   <VBox AnchorPane.topAnchor="96.0" AnchorPane.leftAnchor="80.0" prefHeight="720.0" prefWidth="694.0" spacing="8.0">
      <Button fx:id="NewGame" styleClass="mainMenuButton" mnemonicParsing="false" onAction="#switchToNewGame" text="New Game"/>
      <Button fx:id="LoadGame" styleClass="mainMenuButton" mnemonicParsing="false" text="Load Game"/>
      <Button fx:id="Tutorial" styleClass="mainMenuButton" mnemonicParsing="false" text="Tutorial"/>
      <Button fx:id="Scoreboard" styleClass="mainMenuButton" mnemonicParsing="false" text="Scoreboard"/>
      <Button fx:id="Exit" styleClass="mainMenuButton" mnemonicParsing="false" text="Exit"/>
   </VBox>

   <ImageView fx:id="Title" AnchorPane.topAnchor="48.0" AnchorPane.rightAnchor="64.0" fitHeight="600.0" fitWidth="600.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/title_kritzl-komplex.png" backgroundLoading="true"/>
   </ImageView>


   <VBox AnchorPane.bottomAnchor="16.0" AnchorPane.leftAnchor="24.0">
      <HBox styleClass="soundSettings">
         <Label text="Music"/>
         <Button fx:id="SoundMusicReset" prefHeight="32.0" prefWidth="32.0" styleClass="volumeButton" mnemonicParsing="false"/>
         <Slider prefWidth="150.0" value="100.0"/>
      </HBox>
      <HBox styleClass="soundSettings">
         <Label text="Sounds"/>
         <Button fx:id="SoundEffectReset" prefHeight="32.0" prefWidth="32.0" styleClass="volumeButton" mnemonicParsing="false"/>
         <Slider prefWidth="150.0" value="100.0"/>
      </HBox>
   </VBox>

   <ImageView fx:id="GunMenu1" AnchorPane.rightAnchor="190.0" AnchorPane.bottomAnchor="250.0"
              fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/canon/canon_1_flip_paper.png"/>
   </ImageView>
   <ImageView fx:id="GunMenu2" AnchorPane.rightAnchor="600.0" AnchorPane.topAnchor="110.0"
              fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/canon/canon_2_flip_paper.png"/>
   </ImageView>
   <ImageView fx:id="GunMenu3" AnchorPane.leftAnchor="220.0" AnchorPane.bottomAnchor="250.0"
              fitHeight="140.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/canon/canon_3_paper.png"/>
   </ImageView>

   <Button fx:id="Credits" AnchorPane.bottomAnchor="80.0" AnchorPane.rightAnchor="24.0"
           mnemonicParsing="false" text="Credits"/>
   <ImageView fx:id="SubTitle" AnchorPane.bottomAnchor="24.0" AnchorPane.rightAnchor="24.0" fitHeight="100.0" fitWidth="250.0"
              pickOnBounds="true" preserveRatio="true">
      <Image url="@../../../img/title_danke.png" backgroundLoading="true"/>
   </ImageView>
</AnchorPane>
